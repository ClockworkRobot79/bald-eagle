<h2>
    <div class="row">
        <div class="col-9">
            Ratings
        </div>
        <div class="col-3">
            <% if (user) { %>
                <a href="<%= baseRatingLink %>/new" class="btn btn-xs btn-primary">+</a>
            <% } %>
        </div>
    </div>
</h2>
<% if (ratings.length) { %>
    <div class="container">
        <div class="row">
            <!-- <div class="col-3">
                <h5>Date</h5>
            </div> -->
            <div class="col-4">
                <h5>Rating</h5>
            </div>
            <div class="col-8">
                <h5>Comment</h5>
            </div>
        </div>
        <% ratings.forEach((rating) => { %>
            <div class="row">
                <!-- <div class="col-3">
                    <%- new Date(rating.createdAt).toLocaleDateString() %>
                </div> -->
                <div class="col-4">
                    <a class="btn btn-outline-primary float-right" href="<%= baseRatingLink %>/<%= rating._id %>"><%= rating.rating %></a>
                </div>
                <div class="col-8">
                    <%= limitText(rating.comment, 30) %>
                </div>
            </div>
        <% }); %>
    </div>
<% } %>
