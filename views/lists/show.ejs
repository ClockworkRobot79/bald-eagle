<% include ../partials/header %>

    <h1 class="page-header">
        This is the show list for <%= list.name %>
    </h1>
    <div class="item-action">
        <form class="delete-item" action="/lists/<%= list._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
    <div class="item-action">
        <a href="/lists/<%= list._id %>/edit" class="btn btn-warning">Edit</a>
    </div>
    <% if (friends.length) { %>
        <div class="dropdown item-action">
            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">Share with...</button>
            <div class="dropdown-menu">
                <% friends.forEach((friend) => { %>
                    <a class="dropdown-item" href="/lists/<%= list._id %>/addOwner/<%= friend._id %>"><%= friend.getDisplayName() %></a>
                <% }); %>
            </div>
        </div>
    <% } %>

    <div class="container">
        <% list.restaurants.forEach((restaurant) => { %>
            <div class="row">
                <div class="col-lg-9">
                    <a href="/restaurants/<%= restaurant._id %>">
                        <%= restaurant.name %>
                    </a>
                </div>
                <div class="col-lg-3 float-right">
                    <a href="/lists/<%= list._id %>/removeRestaurant/<%= restaurant._id %>" class="btn btn-danger">Delete</a>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
