<% include ../partials/header %>

    <script>
        function deleteConfirm() {
            return confirm(`Are you sure you want to delete this friend?`);
        }
    </script>

    <div class="page-header">
        <div class="row">
            <div class="col-7">Account Info</div>
            <div class="col">
                <div class="row">
                    <div class="col">
                        <a href="/users/<%= user._id %>/edit" class="btn btn-outline-secondary"><i class="fas fa-edit"></i></a>
                    </div>
                    <div class="col">
                        <form class="delete-item" action="/users/<%= user._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-outline-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h4>
        First Name: <%= user.firstName %>
    </h4>
    <h4>
        Last Name: <%= user.lastName %>
    </h4>
    <h4>
        Email: <%= user.email %>
    </h4>

    <hr class="spacer">

    <h2>
        <div class="row">
            <div class="col-9">
                Friends
            </div>
            <div class="col">
                <a href="/users/<%= user._id %>/friends/new" class="btn btn-primary"><i class="fas fa-user-plus"></i></a>
            </div>
        </div>
    </h2>

    <% user.friends.forEach((friend) => { %>
        <div class="row">
            <div class="col-9">
                <div class="container">
                    <a href="/users/<%= user._id %>/friends/<%= friend._id %>">
                        <h4><%= friend.getDisplayName() %></h4>
                    </a>
                </div>
            </div>
            <div class="col-3">
                    <form class="delete-item" action="/users/<%= user._id %>/friends/<%= friend._id %>?_method=DELETE" method="POST" onsubmit="return deleteConfirm()">
                    <button class="btn btn-outline-danger"><i class="fa fa-trash"></i></button>
                </form>
            </div>
        </div>
    <% }); %>

<% include ../partials/footer %>
