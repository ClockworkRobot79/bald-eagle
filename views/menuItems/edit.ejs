<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Edit a menu item</h1>
    </div>

    <div class="new-item-form">
        <form class="form-inline" action="/restaurants/<%= restaurant._id %>/menuItems/<%= menuItem._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="menuItem[name]" placeholder="Name" value="<%= menuItem.name %>" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="menuItem[description]" placeholder="Description" value="<%= menuItem.description %>">
            </div>
            <div class="form-group">
                <select class="form-control" name="menuItem[category]">
                    <% MenuItem.getCategories().forEach((category) => { %>
                        <option value="<%= category %>" <%= menuItem.category === category ? 'selected' : '' %>><%= category %></option>
                    <% }); %>
                </select>
            </div>

            <% include ../partials/formButtons %>
        </form>
    </div>

<% include ../partials/footer %>