<% include ../partials/header %>

    <a href="javascript:history.back()">Back</a>

    <div style="text-align:center">
        <h1>Add a menu item</h1>
    </div>

    <div class="new-menu-item">
        <form class="form-inline" action="/restaurants/<%= restaurant._id %>/menuItems" method="POST">
            <div class="form-group row">
                <div class="col-lg-1"></div>
                <div>
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-1"></div>
                <div>
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
            </div>
            <a href="javascript:history.back()" class="btn btn-lg btn-primary btn-block">Back</a>
            <button class="btn btn-lg btn-primary btn-block">Create</button>
        </form>
    </div>

<% include ../partials/footer %>