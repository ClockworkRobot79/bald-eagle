<% include ../partials/header %>

    <div class="row">
        <div class="col-2 centered">
            <a class="btn btn-outline-primary bg-light" href="/restaurants"><i class="fas fa-chevron-left"></i></a>
        </div>
        <div class="col-10">
            <div class="page-header">
                <%= restaurant.name %>
            </div>
        </div>
    </div>

    <% if (user) { %>
        <hr class="spacer">
        <div class="row row-spacer">
            <div class="col">
                <a href="/restaurants/<%= restaurant._id %>/checkin" class="btn btn-success"><i class="fas fa-utensils"></i></a>
            </div>
            <div class="col">
                <a href="/restaurants/<%= restaurant._id %>/edit" class="btn btn-outline-secondary"><i class="fas fa-edit"></i></a>
            </div>
            <div class="col">
                <form class="delete-item" action="/restaurants/<%= restaurant._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger"><i class="fas fa-trash"></i></button>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <% if (lists.length) { %>
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-toggle="dropdown">Add to List</button>
                        <div class="dropdown-menu" id="listDropdown">
                            <input type="text" id="listInput" onkeyup="filterFunction('listInput', 'listDropdown')" placeholder="Search for lists...">
                            <% lists.forEach((list) => { %>
                                <a class="dropdown-item" href="/lists/<%= list._id %>/addRestaurant/<%= restaurant._id %>"><%= list.name %></a>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
            <div class="col">
                <% include ../partials/recommendDropdown %>
            </div>
        </div>
    <% } %>

    <div class="container">
        <hr class="spacer">
        <% if (user) { %>

            <h2>Notes</h2>
            <form id="note" action="/restaurants/<%= restaurant._id %>/notes" method="POST">
                <textarea name="note[body]" placeholder="Add notes here..." onchange="document.getElementById('note').submit()" required><%= (note ? note.body : '') %></textarea>
            </form>

            <hr class="spacer">
        <% } %>

        <% if (restaurant.website) { %>
            <h2>Website</h2>
            <div class="container">
                <a href="<%= restaurant.website %>" target="_blank"><%= restaurant.website %></a>
            </div>
        <% } %>

        <% if (restaurant.phone) { %>
            <h2>Phone</h2>
            <div class="container">
                <%= restaurant.phone %>
            </div>
        <% } %>

        <% if (restaurant.location && restaurant.location.address) { %>
            <h2>Address</h2>
            <div class="container">
                <%= restaurant.location.address %>
            </div>
        <% } %>

        <% if (restaurant.description) { %>
            <h2>Description</h2>
            <div class="container">
                <%= restaurant.description %>
            </div>
            <hr class="spacer">
        <% } %>

        <%
        const baseRatingLink = `/restaurants/${restaurant._id}/ratings`;
        const ratings = filterUserOwned(user, restaurant.ratings); 
        %>
        <% include ../partials/ratings %>

        <div class="float-right">
            <% include ../partials/recommendList %>
        </div>

        <hr class="spacer">

        <h2>
            <div class="row">
                <div class="col-9">
                    Menu Items
                </div>
                <div class="col-3">
                    <% if (user) { %>
                        <a href="/restaurants/<%= restaurant._id %>/menuItems/new" class="btn btn-xs btn-outline-primary bg-light">+</a>
                    <% } %>
                </div>
            </div>
        </h2>
        <div class="menu-item-container">
            <% restaurant.getCategories().forEach((category) => { %>
                <div class="row-spacer">
                    <h3><%= category.label %></h3>
                    <% category.menuItems.forEach((menuItem) => { %>
                        <div class="container rating">
                            <div class="row">
                                <% if (user) { %>
                                    <div class="col-3">
                                        <a href="/restaurants/<%= restaurant._id %>/menuItems/<%= menuItem._id %>/ratings/new"
                                            class="btn btn-xs btn-outline-primary bg-light float-right"><%- averageRating(menuItem.ratings, user) %></a>
                                    </div>
                                <% } %>
                                <div class="col">
                                    <h4>
                                        <a href="/restaurants/<%= restaurant._id %>/menuItems/<%= menuItem._id %>"><%= menuItem.name %></a>
                                    </h4>
                                </div>
                            </div>
                            <% if (menuItem.description) { %>
                                <div class="row">
                                    <div class="col-12">
                                        <%= limitText(menuItem.description, 45) %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            <% }); %>
        </div>
    </div>

    <script type="text/javascript" src="/script/dropdownHandler.js"></script>

<% include ../partials/footer %>
