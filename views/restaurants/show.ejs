<% include ../partials/header %>

    <div class="page-header">
        <%= restaurant.name %>
    </div>
    <div class="row">
        <div class="col-2">
            <a class="btn btn-outline-primary bg-light" href="/restaurants"><</a>
        </div>
        <% if (user) { %>
            <div class="col">
                <div class="row">
                    <div class="col-5">
                        <a href="/restaurants/<%= restaurant._id %>/checkin" class="btn btn-success">Checkin</a>
                    </div>
                    <div class="col-3">
                        <a href="/restaurants/<%= restaurant._id %>/edit" class="btn btn-warning">Edit</a>
                    </div>
                    <div class="col-4">
                        <form class="delete-item" action="/restaurants/<%= restaurant._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <% if (lists.length) { %>
        <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">Add to List</button>
            <div class="dropdown-menu" id="listDropdown">
                <input type="text" id="listInput" onkeyup="filterFunction('listInput', 'listDropdown')" placeholder="Search for lists...">
                <% lists.forEach((list) => { %>
                    <a class="dropdown-item" href="/lists/<%= list._id %>/addRestaurant/<%= restaurant._id %>"><%= list.name %></a>
                <% }); %>
            </div>
        </div>
    <% } %>
    <% include ../partials/recommendDropdown %>

    <div class="container">
        <hr class="spacer">
        <% if (user) { %>

            <h2>Notes</h2>
            <form action="/restaurants/<%= restaurant._id %>/notes" method="POST">
                <textarea name="note[body]" placeholder="Add notes here..." required><%= (note ? note.body : '') %></textarea>
                <button class="btn btn-primary btn-block">Save</button>
            </form>

            <hr class="spacer">
        <% } %>

        <% if (restaurant.website) { %>
            <h2>Website</h2>
            <div class="container">
                <a href="<%= restaurant.website %>" target="_blank"><%= restaurant.website %></a>
            </div>
        <% } %>

        <% if (restaurant.phone) { %>
            <h2>Phone</h2>
            <div class="container">
                <%= restaurant.phone %>
            </div>
        <% } %>

        <% if (restaurant.location && restaurant.location.address) { %>
            <h2>Address</h2>
            <div class="container">
                <%= restaurant.location.address %>
            </div>
        <% } %>

        <h2>Description</h2>
        <div class="container">
            <%= restaurant.description %>
        </div>

        <hr class="spacer">

        <%
        const baseRatingLink = `/restaurants/${restaurant._id}/ratings`;
        const ratings = filterUserOwned(user, restaurant.ratings); 
        %>
        <% include ../partials/ratings %>

        <div class="float-right">
            <% include ../partials/recommendList %>
        </div>

        <hr class="spacer">

        <h2>
            <div class="row">
                <div class="col-9">
                    Menu Items
                </div>
                <div class="col-3">
                    <% if (user) { %>
                        <a href="/restaurants/<%= restaurant._id %>/menuItems/new" class="btn btn-xs btn-outline-primary bg-light">+</a>
                    <% } %>
                </div>
            </div>
        </h2>
        <% if (restaurant.menuItems.length) { %>
            <div class="menu-item-container">
                <div class="row">
                    <div class="col-3">
                        <h5>Rating</h5>
                    </div>
                    <div class="col">
                        <h5>Name</h5>
                    </div>
                </div>
                <% restaurant.menuItems.forEach((menuItem) => { %>
                    <div class="container rating">
                        <div class="row">
                            <% if (user) { %>
                                <div class="col-3">
                                    <a href="/restaurants/<%= restaurant._id %>/menuItems/<%= menuItem._id %>/ratings/new"
                                        class="btn btn-xs btn-outline-primary bg-light float-right"><%- averageRating(menuItem.ratings, user) %></a>
                                </div>
                            <% } %>
                            <div class="col">
                                <h4>
                                    <a href="/restaurants/<%= restaurant._id %>/menuItems/<%= menuItem._id %>"><%= menuItem.name %></a>
                                </h4>
                            </div>
                        </div>
                        <% if (menuItem.description) { %>
                            <div class="row">
                                <div class="col-12">
                                    <%= limitText(menuItem.description, 45) %>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <script type="text/javascript" src="/script/dropdownHandler.js"></script>

<% include ../partials/footer %>
