<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Create a new restaurant</h1>
    </div>

    <div class="new-restaurant">
        <form class="form-inline" action="/restaurants" method="POST">
            <div class="form-group row">
                <div class="col-lg-1"></div>
                <div>
                    <input class="form-control" type="text" name="name" placeholder="Restaurant name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-1"></div>
                <div>
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-1"></div>
                <div>
                    <input class="form-control" type="text" name="address" placeholder="Address">
                </div>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Create</button>
        </form>

        <a href="/restaurants">Back</a>
    </div>

<% include ../partials/footer %>