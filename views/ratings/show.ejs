<% include ../partials/header %>

    <div class="page-header">
        Rating for:
        <br>
        <% if (!!menuItem) { %>
            <a href="/restaurants/<%= restaurant._id %>/menuItems/<%= menuItem._id %>"><%= menuItem.name %></a>
            <br> at <br>
        <% } %>
        <a href="/restaurants/<%= restaurant._id %>"><%= restaurant.name %></a>
    </div>

    <div class="row">
        <div class="col-2">
            <a class="btn btn-outline-primary bg-light" href="<%= restaurantRoute %><%= menuItemRoute %>"><</a>
        </div>
         <% if (user) { %>
            <div class="col">
                <div class="row">
                    <div class="col-5"></div>
                    <div class="col-3">
                        <a href="<%= restaurantRoute %><%= menuItemRoute %>/ratings/<%= rating._id %>/edit" class="btn btn-warning">Edit</a>
                    </div>
                    <div class="col-4">
                        <form class="delete-item" action="<%= restaurantRoute %><%= menuItemRoute %>/ratings/<%= rating._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <hr class="spacer">

    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2>Rating</h2>
            </div>
            <div class="col-6">
                <h2><%= rating.rating %></h2>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <h2>Date</h2>
            </div>
            <div class="col-6">
                <h2><%- new Date(rating.createdAt).toLocaleDateString() %></h2>
            </div>
        </div>

        <h2>Comment</h2>
        <div class="menu-item-container">
            <%= rating.comment %>
        </div>
    </div>

<% include ../partials/footer %>
