<% include ../partials/header %>

    <a href="javascript:history.back()">Back</a>

    <div style="text-align:center">
        <h1>Edit a rating</h1>
    </div>

    <div class="new-item-form">
        <form action="<%= restaurantRoute %><%= menuItemRoute %>/ratings/<%= rating._id %>" method="POST">
            <div class="row">
                <div class="col-lg-12">
                    <input class="form-control" type="number" min="0" max="5" step="0.1" name="rating[rating]" placeholder="Rating">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <input class="form-control" type="text" name="rating[comment]" placeholder="Comment">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-lg btn-primary btn-block">Save</button>
                </div>
            </div>
        </form>
    </div>

<% include ../partials/footer %>