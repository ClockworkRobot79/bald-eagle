<% include ../partials/header %>

    <div style="text-align:center">
        <h1>Add a rating</h1>
    </div>

    <div class="new-rating">
        <form class="form-inline" action="/restaurants/<%= restaurant._id %>/ratings" method="POST">
            <div class="form-group row">
                <div class="col-lg-1"></div>
                <div>
                    <input class="form-control" type="number" min="0" max="5" step="0.1" name="rating" placeholder="Rating">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-1"></div>
                <div>
                    <input class="form-control" type="text" name="comment" placeholder="Comment">
                </div>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Create</button>
        </form>

        <a href="javascript:history.back()">Back</a>
    </div>

<% include ../partials/footer %>